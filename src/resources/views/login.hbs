<div class="row">
    <div style="margin: 50px auto; width: 500px;">
    <h2 class="text-center text-uppercase">Đăng nhập</h2>
        <form method="POST">
            <div class="form-group ">
                <label for="">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập địa chỉ email">
            </div>
            <div class="form-group ">
                <label for="">Password</label>
                <input type="password" name="pass" class="form-control" placeholder="Nhập mật khẩu">
            </div>
            <br/>
            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
        </form>
    </div>
</div>